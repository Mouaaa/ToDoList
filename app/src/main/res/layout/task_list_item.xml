<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="302dp"
        android:layout_height="82dp"
        android:background="@color/design_default_color_error"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="156dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">


            <TextView
                android:id="@+id/title"
                android:layout_width="142dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Titre"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="118dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Progress"
                android:textStyle="italic"
                app:layout_constraintEnd_toStartOf="@+id/duree"
                app:layout_constraintHorizontal_bias="0.201"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/duree"
                android:layout_width="51dp"
                android:layout_height="19dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="PrioritÃ©"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/title"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:inputType="none"
                android:id="@+id/editStartDate"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:autofillHints="@string/hint_pick_up_date"
                android:background="#FFFFFF"
                android:ems="1"
                android:focusable="false"
                android:hint="@string/hint_pick_up_date"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/progress"
                app:layout_constraintTop_toBottomOf="@+id/duree" />

            <EditText
                android:id="@+id/editEndDate"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:autofillHints="@string/hint_pick_up_date"
                android:background="#FFFFFF"
                android:ems="1"
                android:focusable="false"
                android:hint="@string/hint_pick_up_date"
                android:inputType="none"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/editStartDate"
                app:layout_constraintTop_toBottomOf="@+id/duree" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>